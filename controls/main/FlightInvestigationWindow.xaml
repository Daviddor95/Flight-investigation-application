<Window x:Class="View.FlightInvestigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flight_investigation_application"
        xmlns:controls="clr-namespace:View"
        mc:Ignorable="d"
        Title="Flight investigation application" Height="598" Width="800" Closed="Window_Closed" MinWidth="700" MinHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="110"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <controls:PlayerUserControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="110" VerticalAlignment="Top" Margin="10,0,10,0"/>
        <controls:joystickUserControl Grid.Row="0" Grid.Column="1" Margin="0,0,-0.4,0.4"/>
        <controls:UserControlCharts Grid.Row="0" Margin="10"/>
    </Grid>
</Window>
